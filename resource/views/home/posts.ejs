<%/*%> search <%*/%>
<%
let { category } = req.query;
%>

<section class="search-sec mb-5 " >
    <div class="container">
        <form action="/post" method="get" novalidate="novalidate">
            <div class="row">
                <div class="col-lg-12">
                    <div class="row">
                        <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                            <button type="submit" class="btn wrn-btn btn-outline-primary">جست و جو</button>
                        </div>
                        <!--<div class="col-lg-3 col-md-3 col-sm-12 p-0">-->
                        <!--<select class="form-control search-slt" id="exampleFormControlSelect1">-->
                        <!--<option>Select Pickup City</option>-->
                        <!--<option>Example one</option>-->
                        <!--<option>Example one</option>-->
                        <!--<option>Example one</option>-->
                        <!--<option>Example one</option>-->
                        <!--<option>Example one</option>-->
                        <!--<option>Example one</option>-->
                        <!--</select>-->
                        <!--</div>-->



                        <div class="col-lg-6 col-md-3 col-sm-12 p-0">
                            <input type="text" class="form-control search-slt" name="search" placeholder="کلمه یا متن دلخواهتان را جست و جو کنید ">
                        </div>
                        <div class="form-group col-md-3">
                            <select name="category" class="form-control search-slt">
                                <option value="all">همه دسته ها</option>
                                <% categories.forEach(cate => { %>
                                <option value="<%= cate.slug %>" <%= cate.slug === category ? 'selected' : '' %> ><%= cate.name %></option>
                                <% }) %>
                            </select>
                        </div>

                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

<%/*%>End search <%*/%>



<div class="row ">
    <% courses.docs.forEach(course => { %>
    <div class="col-12 col-md-3  mb-4 ">
        <div class="card shadow heightCart ">
            <a href="<%= course.path() %>">

                <img class="card-img-top cardHeight" src="<%= course.thumb %>" alt="<%= course.title %>">
            </a>

            <div class="card-body ">
                <h6 class=" p-1"><a class="text-dark text-decoration-none" href="<%= course.path() %>"><%= course.title %></a></h6>
                <p class=" card-text"><%- course.sum.substr(0,130)%>...</p>
                <%/*%> <a href="<%= course.path() %>" class="btn btn-info btn-sm cen">اطلاعات بیشتر</a> <%*/%>


            </div>
            <div class="card-footer text-muted alert-secondary sidebar-heading">
                <span class="badge-danger p-1"> <%= date(course.createdAt).format('jD jMMMM jYYYY') %></span> - <span class="badge-secondary p-1"><%= course.timeline %></span>

            </div>
        </div>
    </div>
    <% }) %>
</div>

<div class="pt-5">
    <%- include(viewPath('layouts/pagination') ,{ pagination : courses}) %>
</div>

<!--categories-->
<div class="m-5">
    <h2 class="d-flex justify-content-center">دسته بندی مطالب</h2>
</div>

<div class="row">

    <% categories.forEach(category => { %>

    <div class="col-12 col-md-3 mb-3 badge-dark p-4 ">
        <div class="card text-white   p-3 col-12 " style="background-color: #667eea">
            <div class="card-body d-flex justify-content-center">
                <a class="text-white font-weight-bold text-decoration-none " href="/post?category=<%= category.slug %>"><h4><%= category.name %></h4></a>
            </div>
            <% if(category.childs) { %>
            <ul class="p-1">
                <% category.childs.forEach(cate => { %>
                <li>
                    <a class="text-white badge-secondary " href="/post?category=<%= cate.slug %>"><%= cate.name %></a>
                </li>
                <% }) %>
            </ul>
            <% } %>
        </div>
    </div>
    <% }) %>
</div>
<!--end of categories-->
